<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="homeTitleFont" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/textColorHomeButtons</item>
        <item name="android:textSize">@dimen/item_home_font_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeSubTitleFont" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/textColorHomeButtons</item>
        <item name="android:textSize">@dimen/item_home_font_subtitle</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="descriptive_font_text" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_miss_stats</item>
</style>
    <style name="title_miss_stats" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_title_miss_stats</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="emphatic_text" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_miss_stats_emphatic</item>
    </style>

    <style name="button_number_normal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_die_text_color</item>
        <item name="android:background">@color/button_die_normal</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="TabLayout_Theme" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">#ffd740</item>
    </style>
</resources>
